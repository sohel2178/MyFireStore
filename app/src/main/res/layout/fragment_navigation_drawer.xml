<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:id="@+id/top"
        android:background="@color/nav_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/profile_image_dim"
            android:layout_height="@dimen/profile_image_dim"
            android:src="@drawable/placeholder"
            android:id="@+id/profile_image"/>

        <TextView
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_image"
            android:textColor="@color/text_color_white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="User Name"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/top">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:id="@+id/home"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/nav_icon_dim"
                android:layout_height="@dimen/nav_icon_dim"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="24sp"
                android:text="@string/icon_home"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text="Home"
                android:textAllCaps="true"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>

        <LinearLayout
            android:padding="8dp"
            android:id="@+id/profile"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/nav_icon_dim"
                android:layout_height="@dimen/nav_icon_dim"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="24sp"
                android:text="@string/icon_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text="Profile"
                android:textAllCaps="true"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>

        <LinearLayout
            android:padding="8dp"
            android:id="@+id/add_user"
            android:clickable="true"
            android:background="@drawable/custom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="@dimen/nav_icon_dim"
                android:layout_height="@dimen/nav_icon_dim"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textSize="24sp"
                android:text="@string/icon_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text="Add User"
                android:textAllCaps="true"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"/>


    </LinearLayout>




</RelativeLayout>
